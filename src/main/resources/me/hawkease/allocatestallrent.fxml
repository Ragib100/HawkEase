   <!-- Footer Status Bar -->
   <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #e9ecef; -fx-border-width: 1;" GridPane.columnSpan="2" GridPane.rowIndex="2">
